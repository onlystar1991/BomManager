<%= form_for(part) do |f| %>
  <% if part.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(part.errors.count, "error") %> prohibited this part from being saved:</h2>

      <ul>
      <% part.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :part_name %>
    <%= f.text_field :part_name %>
  </div>

  <div class="field">
    <%= f.label :part_description %>
    <%= f.text_area :part_description %>
  </div>

  <div class="field">
    <%= f.label :manufacturing_part %>
    <%= f.text_field :manufacturing_part %>
  </div>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :darko_part_number %>
    <%= f.text_field :darko_part_number %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :firmware_id %>
    <%= select("part", "firmware_id", Firmware.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'None'}) %>
  </div>

  <div class="field">
    <%= f.label :part_category_id %>
    <%= select("part", "part_category_id", PartCategory.all.collect {|pc| [ pc.name, pc.id ] }, {include_blank: 'None'}) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
